# CNC ML Project Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=your-railway-host.railway.app
DB_PORT=3306
DB_NAME=railway
DB_USER=root
DB_PASSWORD=your-database-password

# Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# API Configuration
ENV=development
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
API_KEY=your-api-key-for-authentication

# Cache Settings
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=/app/logs/cnc_ml.log

# Model Configuration
MODEL_RANDOM_STATE=42
TEST_SIZE=0.2
VALIDATION_SIZE=0.1
MODEL_DIR=/app/models
MODEL_RETRAIN_INTERVAL=7  # days
MODEL_MIN_DATA_POINTS=1000

# Feature Engineering
EFFICIENCY_THRESHOLD=0.8
MIN_JOB_DURATION=60
MAX_JOB_DURATION=86400

# Performance Thresholds
HIGH_PERFORMANCE_THRESHOLD=0.85
LOW_PERFORMANCE_THRESHOLD=0.60

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_LIMIT=10

# Dashboard Configuration
DASHBOARD_HOST=localhost
DASHBOARD_PORT=8050
DASHBOARD_DEBUG=false

# Model Storage
MODEL_STORAGE_PATH=models/
ARTIFACTS_PATH=artifacts/

# File Storage
DATA_DIR=/app/data
UPLOAD_MAX_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=csv,json,parquet

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_WORKER_CONCURRENCY=2

# Monitoring & Alerting
ENABLE_MONITORING=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
METRICS_ENABLED=true
ALERT_EMAIL=alerts@company.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_RECIPIENTS=admin@company.com,ops@company.com

# External APIs
WEATHER_API_KEY=your-weather-api-key  # For environmental factors
MAINTENANCE_API_URL=https://your-maintenance-system.com/api

# Development/Debug
DEBUG=false
PROFILING_ENABLED=false
MOCK_DATA_ENABLED=false